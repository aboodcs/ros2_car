<launch>
    <let name="urdf_path" 
         value="$(find-pkg-share my_robot_pkg)/urdf/my_robot.urdf.xacro" />
    <let name="rviz_config_path"
         value="$(find-pkg-share my_robot_pkg)/rviz/urdf_config.rviz" />
    <let name="gazebo_config_path" value="$(find-pkg-share my_robot_bringup)/config/gazebo_bridge.yaml" />

    <!-- Publish robot state -->
    <node pkg="robot_state_publisher" exec="robot_state_publisher">
        <param name="robot_description"
               value="$(command 'xacro $(var urdf_path)')" />
    </node>

    <!-- Launch Gazebo with empty world -->
    <include file="$(find-pkg-share ros_gz_sim)/launch/gz_sim.launch.py">
      <arg name="gz_args" value="empty.sdf -r" />
    </include>
   
    <!-- Spawn robot in Gazebo -->
    <node pkg="ros_gz_sim" exec="create" args="-topic robot_description"/>

    <!-- ROS ↔️ Gazebo bridge -->
    <node pkg="ros_gz_bridge" exec="parameter_bridge">
      <param name="config_file"
             value="$(var gazebo_config_path)"/>
    </node>          

    <!-- RViz -->
    <node pkg="rviz2" exec="rviz2" output="screen" 
          args="-d $(var rviz_config_path)" />

    <!-- Movement node: cmd_vel publisher -->
    <node pkg="my_robot_bringup" exec="cmd_vel_publisher.py" output="screen"/>
</launch>
